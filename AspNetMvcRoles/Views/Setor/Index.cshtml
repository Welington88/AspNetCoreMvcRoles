@model IEnumerable<AspNetMvcRoles.Models.Setor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sedes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sedes.Descricao)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.IdSetor">Editar</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdSetor">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdSetor">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
