@model IEnumerable<AspNetMvcRoles.Models.Regras>

@{
    ViewData["Title"] = "Index";
}

<h1>Regras</h1>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdRegra">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdRegra">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
